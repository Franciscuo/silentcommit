---
import Layout from '../layouts/Layout.astro';
import { ArrowLeft } from '@phosphor-icons/react';
---

<Layout 
  title="Page Not Found - Silent Commit"
  description="The page you're looking for doesn't exist."
  canonical="https://silentcommit.com/404"
>
  <main class="min-h-screen bg-background text-foreground flex items-center justify-center">
    <div class="max-w-lg mx-auto px-8 text-center space-y-8">
      <div class="space-y-4">
        <h1 class="text-6xl font-light text-foreground">404</h1>
        <h2 class="text-2xl font-light text-muted-foreground">Page Not Found</h2>
        <p class="text-muted-foreground">
          The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
        </p>
      </div>
      
      <div class="flex items-center justify-center gap-4">
        <a
          href="/"
          class="flex items-center gap-2 px-6 py-3 bg-foreground text-background rounded transition-colors hover:bg-muted-foreground"
        >
          <ArrowLeft size={16} />
          Go Home
        </a>
        <a
          href="/posts"
          class="px-6 py-3 text-muted-foreground hover:text-foreground transition-colors"
        >
          Browse Posts
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  body {
    font-family: 'Inter', sans-serif;
    background-color: oklch(0.06 0 0);
    color: oklch(0.93 0 0);
    -webkit-font-smoothing: antialiased;
  }
</style>