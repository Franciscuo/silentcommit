---
import Layout from '../../layouts/Layout.astro';
import { getAllPosts } from '../../data/posts';
import { formatDate, calculateReadingTime } from '../../lib/blog-utils';
import { ArrowLeft, GithubLogo, LinkedinLogo } from '@phosphor-icons/react';
import { marked } from 'marked';

export async function getStaticPaths() {
  const posts = getAllPosts();
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post }
  }));
}

const { post } = Astro.props;

if (!post) {
  return Astro.redirect('/404');
}

// Configure marked for better code highlighting
marked.setOptions({
  breaks: true,
  gfm: true,
});

const htmlContent = marked(post.content);
---

<Layout 
  title={`${post.title} - Silent Commit`}
  description={post.excerpt}
  keywords={`${post.tags.join(', ')}, software development, coding, programming`}
  canonical={`https://silentcommit.com/posts/${post.id}`}
>
  <main class="min-h-screen bg-background text-foreground">
    <div class="max-w-3xl mx-auto px-8 py-16">
      <!-- Header -->
      <header class="flex items-center justify-between mb-16">
        <a
          href="/posts"
          class="flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors duration-200"
        >
          <ArrowLeft size={16} />
          <span>Back to Posts</span>
        </a>
      </header>

      <!-- Article -->
      <article class="space-y-8">
        <!-- Title and Meta -->
        <header class="space-y-6">
          <h1 class="text-4xl font-light tracking-tight text-foreground leading-tight">
            {post.title}
          </h1>
          
          <div class="flex items-center justify-between border-b border-border pb-6">
            <div class="flex items-center gap-4 text-sm text-muted-foreground">
              <time>{formatDate(post.createdAt)}</time>
              <span>â€¢</span>
              <span>{calculateReadingTime(post.content)} min read</span>
            </div>
            
            {post.tags.length > 0 && (
              <div class="flex items-center gap-2">
                {post.tags.map(tag => (
                  <span class="text-xs px-3 py-1 bg-muted text-muted-foreground rounded">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </div>
        </header>

        <!-- Content -->
        <div class="prose prose-lg max-w-none" set:html={htmlContent}></div>

        <!-- Footer -->
        <footer class="border-t border-border pt-8 space-y-6">
          <div class="flex items-center justify-between">
            <p class="text-muted-foreground">
              Thanks for reading! Share your thoughts or connect with me:
            </p>
            <div class="flex items-center gap-4">
              <a 
                href="https://github.com/Franciscuo" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-muted-foreground hover:text-foreground transition-colors"
                aria-label="GitHub Profile"
              >
                <GithubLogo size={20} />
              </a>
              <a 
                href="https://www.linkedin.com/in/franciscuo/" 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-muted-foreground hover:text-foreground transition-colors"
                aria-label="LinkedIn Profile"
              >
                <LinkedinLogo size={20} />
              </a>
            </div>
          </div>
        </footer>
      </article>
    </div>
  </main>
</Layout>

<style>
  body {
    font-family: 'Inter', sans-serif;
    background-color: oklch(0.06 0 0);
    color: oklch(0.93 0 0);
    -webkit-font-smoothing: antialiased;
  }
  
  .font-mono {
    font-family: 'JetBrains Mono', monospace;
  }

  /* Prose Styles */
  .prose {
    line-height: 1.7;
  }

  .prose h1 {
    font-size: 1.5rem;
    font-weight: 500;
    color: oklch(0.93 0 0);
    margin-bottom: 1.5rem;
    margin-top: 2rem;
  }

  .prose h1:first-child {
    margin-top: 0;
  }

  .prose h2 {
    font-size: 1.25rem;
    font-weight: 500;
    color: oklch(0.93 0 0);
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  .prose h2:first-child {
    margin-top: 0;
  }

  .prose h3 {
    font-size: 1.125rem;
    font-weight: 500;
    color: oklch(0.93 0 0);
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
  }

  .prose h3:first-child {
    margin-top: 0;
  }

  .prose p {
    color: oklch(0.93 0 0);
    margin-bottom: 1.5rem;
    line-height: 1.75;
  }

  .prose a {
    color: oklch(0.93 0 0);
    text-decoration: underline;
  }

  .prose a:hover {
    text-decoration: none;
  }

  .prose ul, .prose ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose blockquote {
    border-left: 2px solid oklch(0.7 0 0);
    padding-left: 1.5rem;
    font-style: italic;
    color: oklch(0.7 0 0);
    margin: 1.5rem 0;
  }

  .prose code {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    background-color: oklch(0.1 0 0);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }

  .prose pre {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    background-color: oklch(0.1 0 0);
    padding: 1.5rem;
    border-radius: 0.25rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
  }
</style>